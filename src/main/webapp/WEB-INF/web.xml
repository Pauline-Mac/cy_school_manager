<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="https://jakarta.ee/xml/ns/jakartaee"
	xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
	id="WebApp_ID" version="6.0">
	<display-name>cy_school_manager</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.jsp</welcome-file>
		<welcome-file>default.htm</welcome-file>
	</welcome-file-list>
	<session-config>
		<session-timeout>5</session-timeout>
	</session-config>
	
	<security-role>
		<role-name>admin</role-name>
	</security-role>
	
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Project Web Access</web-resource-name>
			<url-pattern>/admin/*</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
		
	</security-constraint>
	
	<security-role>
		<role-name>student</role-name>
	</security-role>
	
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Project Web Access</web-resource-name>
			<url-pattern>/professor/*</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		
		<auth-constraint>
			<role-name>professor</role-name>
		</auth-constraint>
		
	</security-constraint>
	
	<security-role>
		<role-name>student</role-name>
	</security-role>
	
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Project Web Access</web-resource-name>
			<url-pattern>/student/*</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		
		<auth-constraint>
			<role-name>student</role-name>
		</auth-constraint>
		
	</security-constraint>
	
	<login-config>
		<auth-method>FORM</auth-method>
		<form-login-config>
			<form-login-page>/WEB-INF/admin/login/login.jsp</form-login-page>
			<form-error-page>/WEB-INF/admin/login/login_failed.jsp</form-error-page>
		</form-login-config>
	</login-config>

	<!-- Routes -->
	<servlet>
		<servlet-name>Index</servlet-name>
		<servlet-class>views.admin.Index</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Index</servlet-name>
		<url-pattern>/admin/index</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Students</servlet-name>
		<servlet-class>views.admin.Students</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Students</servlet-name>
		<url-pattern>/admin/students</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Professors</servlet-name>
		<servlet-class>views.admin.Professors</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Professors</servlet-name>
		<url-pattern>/admin/professors</url-pattern>
	</servlet-mapping>
</web-app>