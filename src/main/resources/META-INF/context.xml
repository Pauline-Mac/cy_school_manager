<Context>
    <Environment name="DB_URL" value="jdbc:mysql://localhost:3306/cy_school_manager" type="java.lang.String"/>
    <Resource name="CySchoolManagerDB"
              auth="Container"
              type="javax.sql.DataSource"
              factory="org.apache.commons.dbcp.BasicDataSourceFactory"
              driverClassName="com.mysql.cj.jdbc.Driver"
              url="jdbc:mysql://localhost:3306/cy_school_manager"
              username="root"
              password="cytech0001"
              maxActive="20"
              maxIdle="10"
              maxWait="10000" />

    <web-app>
        <listener>
            <listener-class>services.hibernate.HibernateContextListener</listener-class>
        </listener>
    </web-app>

    <Realm className="org.apache.catalina.realm.DataSourceRealm"
           dataSourceName="CySchoolManagerDB"
           userTable="user"
           userNameCol="email"
           userCredCol="password"
           roleNameCol="role" />
</Context>
